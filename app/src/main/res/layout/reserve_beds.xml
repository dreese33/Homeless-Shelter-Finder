<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/reservation"
        android:text="Reserve Beds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:focusable="false"
        android:inputType="none"
        android:textSize="45dp"
        app:layout_constraintTop_toBottomOf="@+id/back"/>

    <EditText
        android:id="@+id/current_beds"
        android:text="Current Number of Beds: "
        android:layout_width="match_parent"
        android:background="@android:color/transparent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:focusable="false"
        android:inputType="none"
        android:textSize="20dp"
        android:layout_marginTop="75dp"
        app:layout_constraintTop_toBottomOf="@+id/reservation"/>

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:hint="Number of Beds to Reserve"
        android:maxLines="1"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/current_beds" />

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/reserve"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reserve"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>