<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/Scroll"
        android:layout_width="368dp"
        android:layout_height="495dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:clickable="true"
        android:focusableInTouchMode="true" >

        <LinearLayout
            android:id="@+id/Scroll_Layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Scroll_Enter_Data"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#000000"
                android:text="Enter Shelter Data Below: "
                android:textColor="#ffff00"
                android:textSize="25dp" />

            <EditText
                android:layout_marginTop="30dp"
                android:id="@+id/Shelter_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:hint="Enter Shelter Name"
                android:imeOptions="actionDone"
                android:singleLine="true"/>

            <EditText
                android:layout_marginTop="5dp"
                android:id="@+id/Shelter_Unique_Key"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:hint="Enter Shelter Key"
                android:imeOptions="actionDone"
                android:singleLine="true" />

            <EditText
                android:layout_marginTop="5dp"
                android:id="@+id/Shelter_Capacity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:hint="Enter Shelter Capacity"
                android:imeOptions="actionDone"
                android:singleLine="true"/>

            <EditText
                android:layout_marginTop="5dp"
                android:id="@+id/Shelter_Restrictions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:hint="Enter Shelter Restrictions"
                android:imeOptions="actionDone"
                android:singleLine="true"/>

            <EditText
                android:layout_marginTop="5dp"
                android:id="@+id/Shelter_Longitude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:hint="Enter Shelter Longitude"
                android:imeOptions="actionDone"
                android:singleLine="true"/>

            <EditText
                android:layout_marginTop="5dp"
                android:id="@+id/Shelter_Latitude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:hint="Enter Shelter Latitude"
                android:imeOptions="actionDone"
                android:singleLine="true"/>

            <EditText
                android:layout_marginTop="5dp"
                android:id="@+id/Shelter_Address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:hint="Enter Shelter Address"
                android:imeOptions="actionDone"
                android:singleLine="true"/>

            <EditText
                android:layout_marginTop="5dp"
                android:id="@+id/Shelter_Notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:hint="Enter Notes About Shelter"
                android:imeOptions="actionDone"
                android:singleLine="true"/>

            <EditText
            android:layout_marginTop="5dp"
            android:id="@+id/Shelter_Phone_Number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:hint="Enter Shelter Phone Number"
            android:imeOptions="actionDone"
            android:singleLine="true"/>

            <EditText
                android:layout_marginTop="5dp"
                android:id="@+id/number_of_beds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:hint="Enter Number of Available Beds"
                android:imeOptions="actionDone"
                android:singleLine="true"/>

            <Button
                android:id="@+id/add_shelters"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Shelter"
                android:textAlignment="center"/>

            <Button
                android:id="@+id/cancel_button"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textAlignment="center"/>
        </LinearLayout>

    </ScrollView>
</android.support.constraint.ConstraintLayout>